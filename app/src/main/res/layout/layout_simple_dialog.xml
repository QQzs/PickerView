<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_size_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d_45"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/s_16" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/d_15"
        android:gravity="left"
        android:includeFontPadding="false"
        android:padding="@dimen/d_15"
        android:textColor="@android:color/black"
        android:textSize="@dimen/s_14" />

    <FrameLayout
        android:id="@+id/layout_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        android:id="@+id/view_content_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p_1"
        android:background="@color/c_a_88_000000" />

    <LinearLayout
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/s_16"
            android:visibility="gone" />

        <View
            android:id="@+id/button_divider"
            android:layout_width="@dimen/p_1"
            android:layout_height="match_parent"
            android:background="@color/c_a_88_000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/c_FF8200"
            android:textSize="@dimen/s_16"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
